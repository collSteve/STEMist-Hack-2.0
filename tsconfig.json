{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "removeComments": true,
        "strict": true,
        "target": "es6",
        "outDir": "build",
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es6",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}